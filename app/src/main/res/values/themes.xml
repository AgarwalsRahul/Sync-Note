<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme.Light" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="textColor">@color/secondary_text_color</item>
        <item name="metaTextColor">@color/grey_light</item>
        <item name="card_color">@color/card_background_color</item>
        <item name="md_background_color">@color/card_background_color</item>
        <item name="md_color_button_text">@color/colorPrimary</item>
        <item name="md_divider_color">@color/colorPrimary</item>
        <item name="md_font_button">@font/gilroy_bold</item>
        <item name="md_font_title">@font/gilroy_extrabold</item>
        <item name="md_font_body">@font/gilroy_regular</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="android:autofilledHighlight" tools:targetApi="26">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="colorNavigationItem">@color/menu_item_color_state</item>
        <item name="colorNavigationItemSelected">?attr/textColor</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>



    </style>

    <style name="ButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_background_color</item>

    </style>




    <style name="CardTheme" parent="Widget.MaterialComponents.CardView">
        <item name="backgroundTint">@color/card_background_color</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">@dimen/note_card_elevation</item>
        <item name="cardBackgroundColor">@color/card_background_color</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
        <item name="itemIconSize">24dp</item>
        <item name="itemIconPadding">16dp</item>
        <item name="itemTextAppearance">@style/NavTextStyle</item>
        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>
        <item name="itemShapeFillColor">?attr/drawableNavigationItemBackground</item>
        <item name="android:colorControlHighlight">@android:color/transparent</item>
        <item name="itemRippleColor">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.NavigationView" parent="">
        <item name="android:colorControlHighlight">@android:color/transparent</item>
        <item name="android:listDivider">@color/colorPrimary</item>1
    </style>

    <style name="NavTextStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/gilroy_bold</item>

    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/secondary_text_color</item>
    </style>




</resources>